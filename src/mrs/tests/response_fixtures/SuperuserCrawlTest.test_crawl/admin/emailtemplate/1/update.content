<div class="container" id="modal-body-ajax">
        
<form action="/admin/emailtemplate/1/update" class="form-invalid" data-action="submit-&gt;form#submit" data-controller="form" enctype="multipart/form-data" id="form-object-emailtemplate" method="post">

          <div class="modal-content">
          
            
            <h4 class="text-default" id="modal-title-ajax">Gabarit "pmt: manquante": modifier</h4>
            
          
            
  

  

  
<div class="row">
    <div class="input-field col s12 required" id="id_name_container">
        <input id="id_name" maxlength="50" name="name" type="text" value="PMT: manquante"/>
        <label class="active" for="id_name">Nom</label>
        
    </div>
</div>
 

<div class="row">
    <div class="input-field col s12 required" id="id_subject_container">
        <input id="id_subject" maxlength="255" name="subject" type="text" value="PMT manquante sur {{ display_id }}"/>
        <label class="active" for="id_subject">Sujet du mail</label>
        
    </div>
</div>
 
<div class="row">
    <div class="input-field col s12 required" id="id_body_container">
        <textarea class="materialize-textarea" cols="40" id="id_body" name="body" rows="10">PMT manquante sur {{ display_id }}: Contenu de mail</textarea>
        <label class="active" for="id_body">Contenu du mail</label>
        
    </div>
</div>
 
<div class="row">
    <div class="checkbox-field col s12" id="id_active_container">
        <label>
        <input checked="" class="filled-in" id="id_active" name="active" type="checkbox"/><span for="id_active">Activ√©</span></label>
        
    </div>
</div>
 
<div class="row">
    <div class="select-field col s12 required" id="id_menu_container">
        <label for="id_menu">Menu</label>
        <select id="id_menu" name="menu">
            <option selected="selected" value="reject">Rejet</option>
            <option value="contact">Contact</option>
        </select>
        
    </div>
</div>
 

<div class="row">
    <div class="input-field col s12 required" id="id_counter_container">
        <input id="id_counter" name="counter" type="number" value="1"/>
        <label class="active" for="id_counter">Counter</label>
        
    </div>
</div>


          </div>
          <div class="modal-footer">
            
    
    <button class="btn btn-primary" type="submit">Modifier</button>

          </div>
        
  </form>


      </div>